{
  "name": "server-node-boilerplate",
  "version": "1.0.1",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && tsc && ncp src/views/assets dist/.assets && ncp src/views dist/views && rm -r dist/views/assets && npm run tailwind && npm run version:assets",
    "clean": "rimraf dist",
    "start:dev": "ncp src/views/assets src/.assets && concurrently --kill-others \"nodemon\" \"npm run tailwind:dev\"",
    "start:prod": "node dist/main.js",
    "tailwind": "tailwindcss -i src/views/main.css -o dist/.assets/main.css --minify",
    "tailwind:dev": "tailwindcss -i src/views/main.css -o src/.assets/main.css --watch",
    "version:assets": "node scripts/version-assets.js"
  },
  "dependencies": {
    "@kawijsr/server-node": "^1.1.0",
    "cors": "^2.8.6",
    "express-handlebars": "^8.0.6",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.1",
    "@types/node": "^25.3.0",
    "concurrently": "^9.2.1",
    "ncp": "^2.0.0",
    "nodemon": "^3.1.14",
    "rimraf": "^6.1.3",
    "tailwindcss": "^4.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
